<div class="container">
  <h1>Films récemment recherchés</h1>
  <%@bookrecoms.each do |bookrecom|%>
  <div class="card shadow mb-5 bg-body" style="max-width: 540px;">
    <%= link_to bookrecom_path(bookrecom), class:"text-decoration-none" do%>
      <div class="cards g-0 d-flex">
        <div class="card-body d-flex flex-column">
          <div>
            <h5 class="card-title"><%=bookrecom.book.title %></h5>
          </div>
          <div>
            <p class="card-text">Recommandé par: <%=bookrecom.friend%></p>
          </div>
          <div>
            <p class="card-text">Recherché le: <%=bookrecom.updated_at.strftime("%m/%d/%Y")%></p>
          </div>
          <div>
            <%= simple_form_for bookrecom do |f| %>
              <%= f.input :viewed, label: 'vu?' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%end%>
  <div class="d-flex justify-content-around">
    <div>
      <%= link_to "Add a film", new_bookrecom_path, class:"text-decoration-none buttons" %>
    </div>
    <div>
      <%= link_to "Back", root_path, class:"text-decoration-none buttons" %>
    </div>
  </div>
</div>
