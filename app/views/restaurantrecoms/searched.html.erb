<div class="container">
  <h1>Restaurants récemment recherchés</h1>
  <%@restaurantrecoms.each do |restaurantrecom|%>
  <div class="card shadow mb-5 bg-body" style="max-width: 540px;">
    <%= link_to restaurantrecom_path(restaurantrecom), class:"text-decoration-none" do%>
      <div class="cards g-0 d-flex">
        <div class="card-body d-flex flex-column">
          <div>
            <h5 class="card-title"><%=restaurantrecom.restaurant.title %></h5>
          </div>
          <div>
            <p class="card-text">Recommandé par: <%=restaurantrecom.friend%></p>
          </div>
          <div>
            <p class="card-text">Recherché le: <%=restaurantrecom.updated_at.strftime("%m/%d/%Y")%></p>
          </div>
          <div>
            <%= simple_form_for restaurantrecom do |f| %>
              <%= f.input :viewed, label: 'vu?' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%end%>
  <div class="d-flex justify-content-around">
    <div>
      <%= link_to "Ajouter un restaurant", new_restaurantrecom_path, class:"text-decoration-none buttons" %>
    </div>
    <div>
      <%= link_to "Retour", root_path, class:"text-decoration-none buttons" %>
    </div>
  </div>
</div>
