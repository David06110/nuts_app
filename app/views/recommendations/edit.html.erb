<%= simple_form_for @recommendation do |f| %>
  <%if @recommendation.viewed == false%>
  <%= f.input :friend %>
  <%= f.input :comment %>
  <% else%>
    <%= f.input :feedback_content %>
    <%= f.input :feedback_rating %>
  <% end %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
