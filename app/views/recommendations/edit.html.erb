<div class="container">
  <%= simple_form_for @recommendation do |f| %>
    <%= f.input :friend %>
    <%= f.input :comment %>
    <% if @recommendation.viewed == true %>
      <%= f.input :feedback_content %>
      <%= f.input :feedback_rating %>
    <% end %>
    <%= f.submit "Enregistrer", class: "btn-submit" %>
  <% end %>
  <div class="my-4">
    <%= link_to "Retour", recommendations_path, class:"text-decoration-none buttons" %>
  </div>
</div>
