<div class="container">
  <h1>Ma liste de films</h1>
  <%@recommendations.each do |recommendation|%>
  <div class="card shadow mb-5 bg-body" style="max-width: 540px;">
    <div class="cards g-0 d-flex">
      <div class="images-index">
      <%= image_tag recommendation.movie.image_url, class: "img-fluid" %>
      </div>
      <div class="card-body d-flex flex-column">
        <div>
          <h5 class="card-title"><%=recommendation.movie.title %></h5>
        </div>
        <div>
          <p class="card-text">Recommandé par: <%=recommendation.friend%></p>
        </div>
        <div>
          <p class="card-text">Ajouté le: <%=recommendation.added_on.to_time.strftime("%m/%d/%Y")%></p>
        </div>
      </div>
    </div>
  </div>
  <%end%>
</div>
