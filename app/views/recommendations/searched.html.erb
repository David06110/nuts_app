<div class="container">
  <h1>Films récemment recherchés</h1>
  <%@recommendations.each do |recommendation|%>
  <div class="card shadow mb-5 bg-body" style="max-width: 540px;">
    <%= link_to recommendation_path(recommendation), class:"text-decoration-none" do%>
      <div class="cards g-0 d-flex">
        <div class="images-index">
        <% if recommendation.movie.image_url.start_with?("http") %>
          <%= image_tag recommendation.movie.image_url, alt: "Poster", class: "img-fluid" %>
        <% elsif recommendation.movie.image_url.start_with?("..//assets/images/") %>
          <%= image_tag recommendation.movie.image_url.gsub("..//assets/images/", ""), alt: "Poster", class: "img-fluid" %>
         <% else %>
           <%= image_tag recommendation.movie.image_url.gsub("../assets/images/", ""), alt: "Poster", class: "img-fluid" %>
         <% end %>
          <%# <%= image_tag recommendation.movie.image_url, alt: "Poster", class: "img-fluid" %>
        </div>
        <div class="card-body d-flex flex-column">
          <div>
            <h5 class="card-title"><%=recommendation.movie.title %></h5>
          </div>
          <div>
            <p class="card-text">Recommandé par: <%=recommendation.friend%></p>
          </div>
          <div>
            <p class="card-text">Recherché le: <%=recommendation.updated_at.strftime("%m/%d/%Y")%></p>
          </div>
          <div>
            <%= simple_form_for recommendation do |f| %>
              <%= f.input :viewed, label: 'vu?' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%end%>
  <div class="d-flex justify-content-around">
    <div>
      <%= link_to "Ajouter un film", new_recommendation_path, class:"text-decoration-none buttons" %>
    </div>
    <div>
      <%= link_to "Retour", root_path, class:"text-decoration-none buttons" %>
    </div>
  </div>
</div>
