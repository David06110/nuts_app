<div class="container">
  <h1>Podcasts récemment recherchés</h1>
  <%@podcastrecoms.each do |podcastrecom|%>
  <div class="card shadow mb-5 bg-body" style="max-width: 540px;">
    <%= link_to podcastrecom_path(podcastrecom), class:"text-decoration-none" do%>
      <div class="cards g-0 d-flex">
        <div class="card-body d-flex flex-column">
          <div>
            <h5 class="card-title"><%=podcastrecom.podcast.title %></h5>
          </div>
          <div>
            <p class="card-text">Recommandé par: <%=podcastrecom.friend%></p>
          </div>
          <div>
            <p class="card-text">Recherché le: <%=podcastrecom.updated_at.strftime("%m/%d/%Y")%></p>
          </div>
          <div>
            <%= simple_form_for podcastrecom do |f| %>
              <%= f.input :viewed, label: 'vu?' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%end%>
  <div class="d-flex justify-content-around">
    <div>
      <%= link_to "Ajouter un podcast", new_podcastrecom_path, class:"text-decoration-none buttons" %>
    </div>
    <div>
      <%= link_to "Retour", root_path, class:"text-decoration-none buttons" %>
    </div>
  </div>
</div>
